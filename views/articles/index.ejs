<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <title>Blog Website</title>
</head>
<body>
  <div class="container">
    <h1>Bharat Intern Blog Website</h1>
    <a href="/articles/new" class="create-button">Create Article</a>

    <% articles.forEach(article => { %>
      <div class="article-card">
        <h2><%= article.title %></h2>
        <small><%= article.createdAt.toLocaleDateString() %></small>
        <p><%= article.description %></p>
        
        <a href="articles/<%= article.slug %>" class="btn btn-read">Read More</a>
        <a href="articles/edit/<%= article.id %>" class="btn btn-edit">Edit</a>
        <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-delete">Delete</button>
        </form>
      </div>
    <% }) %>
  </div>
</body>
</html>
